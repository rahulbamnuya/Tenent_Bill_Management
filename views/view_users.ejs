<!DOCTYPE html>
<html>

<head>
      <title>View Users</title>
</head>

<body>
      <h1>User List</h1>

      <table>
            <thead>
                  <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Actions</th>
                  </tr>
            </thead>
            <tbody>
                  <% users.forEach(user=> { %>
                        <tr>
                              <td>
                                    <%= user.id %>
                              </td>
                              <td>
                                    <%= user.name %>
                              </td>
                              <td>
                                    <%= user.email %>
                              </td>
                              <td>
                                    <%= user.age %>
                              </td>
                              <td>
                                    <a href="/edit-user/<%= user.id %>">Edit</a>
                                    <form action="/delete-user/<%= user.id %>" method="POST" style="display: inline;">
                                          <button type="submit"
                                                onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                    </form>
                              </td>
                        </tr>
                        <% }); %>
            </tbody>
      </table>

</body>

</html>