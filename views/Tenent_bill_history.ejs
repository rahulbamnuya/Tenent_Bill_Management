<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tenant Management Dashboard</title>
  <link rel="stylesheet" href="/CSS/header.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <style>
   
    .dialog {
      margin: 30px auto;
      width: 95%;
      max-width: 720px;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
      padding: 20px;
      animation: fadeIn 0.4s ease-in-out;
      overflow-x: hidden;
    }
  
    .dialog-content {
      position: relative;
    }
  
    .dialog-close {
      position: absolute;
      top: 16px;
      right: 20px;
      font-size: 24px;
      font-weight: bold;
      cursor: pointer;
      color: #999;
      transition: color 0.3s ease;
    }
  
    .dialog-close:hover {
      color: #333;
    }
  
    .dialog-content h3 {
      font-size: 1.6rem;
      margin-bottom: 20px;
      text-align: center;
      color: #343a40;
    }
  
    .dialog-content .btn.back {
      position: absolute;
      top: 16px;
      left: 20px;
      background-color: #6c757d;
      color: white;
      padding: 8px 14px;
      border-radius: 6px;
      text-decoration: none;
      font-size: 14px;
      transition: background-color 0.3s ease;
    }
  
    .dialog-content .btn.back:hover {
      background-color: #5a6268;
    }
  
    .table-wrapper {
      margin-top: 40px;
      overflow-x: hidden;
    }
  
    table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
      background-color: #fff;
      border-radius: 8px;
      font-size: 15px;
      table-layout: fixed;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.06);
    }
  
    thead {
      background-color: #007BFF;
      color: white;
      text-transform: uppercase;
    }
  
    th, td {
      padding: 14px 12px;
      border-bottom: 1px solid #e0e0e0;
      text-align: center;
      word-break: break-word;
    }
  
    tbody tr:nth-child(even) {
      background-color: #f9f9f9;
    }
  
    .btn {
      padding: 8px 14px;
      font-size: 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
  
    .btn.ghost {
      background-color: #28a745;
      color: white;
      transition: 0.3s ease;
    }
  
    .btn.ghost:hover {
      background-color: #218838;
    }
  
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  
    /* Responsive Adjustments */
    @media screen and (max-width: 768px) {
      .dialog {
        width: 95%;
        padding: 16px;
      }
  
      table {
        font-size: 14px;
      }
  
      .dialog-content h3 {
        font-size: 1.4rem;
      }
  
      .btn {
        font-size: 13px;
        padding: 6px 10px;
      }
  
      .dialog-close {
        font-size: 22px;
      }
  
      .dialog-content .btn.back {
        font-size: 13px;
        padding: 6px 10px;
      }
    }
  
    @media screen and (max-width: 480px) {
      th, td {
        font-size: 13px;
        padding: 8px;
      }
  
      .dialog-content h3 {
        font-size: 1.2rem;
      }
  
      .btn {
        font-size: 12px;
        padding: 5px 8px;
      }
  
      .dialog-content .btn.back {
        font-size: 12px;
        top: 10px;
        left: 12px;
      }
    }
  </style>
  
</head>

<body>
  <%- include('partials/header') %>

  <!-- Dialog Section -->
  <div class="dialog" id="view-history-dialog">
    <div class="dialog-content">
      <!-- Back Button -->
      <a href="/detail/<%= history[0].tenent_id %>" class="btn back">Back</a>

      <!-- Close Button -->
      <span class="dialog-close"></span>

      <h3>Bill History</h3>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Month Reading</th>
              <th>Amount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% history.forEach(entry => { %>
            <tr>
              <td><%= entry.bill_date %></td>
              <td><%= entry.month_reading %></td>
              <td>Rs.<%= entry.bill_amount %></td>
              <td>
                <a href="/history/details/<%= entry.tenent_id %>/<%= entry.id %>" class="btn ghost">See Details</a>
                
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>
