<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Tenant Management Dashboard</title>
      <link rel="stylesheet" href="/CSS/header.css">
      <style>
            /* General Styles */



/* Dialog Box */
.dialog {
    
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    max-width: 700px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    padding: 20px;
    z-index: 1000;
    animation: fadeIn 0.3s ease-in-out;
    overflow-y: auto;
    max-height: 80vh;
}

/* Dialog Content */
.dialog-content {
    position: relative;
    padding: 20px;
    text-align: center;
}

/* Close Button */
.dialog-close {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    cursor: pointer;
    color: #555;
}

.dialog-close:hover {
    color: #222;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #ddd;
}

/* Table Header */
thead {
    background-color: #007BFF;
    color: white;
    font-weight: bold;
}

th, td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    color: #333;
}

tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* Buttons */
.btn {
    padding: 8px 14px;
    font-size: 14px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btn.ghost {
    background-color: #28a745;
    color: white;
    transition: 0.3s ease;
}

.btn.ghost:hover {
    background-color: #218838;
}

/* Fade-in animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translate(-50%, -60%);
    }
    to {
        opacity: 1;
        transform: translate(-50%, -50%);
    }
}

/* Responsive Design */
@media screen and (max-width: 600px) {
    .dialog {
        width: 90%;
    }

    th, td {
        padding: 10px;
        font-size: 14px;
    }
}

      </style>
      
</head>

<body>

    <%- include('partials/header') %>

    <div class="dialog" id="view-history-dialog">
        <div class="dialog-content">
            <!-- Back Button -->
            <a href="/detail/<%= history[0].tenent_id %>" class="btn ghost" style="position: absolute; top: 10px; left: 15px;">â¬… Back</a>

            <span class="dialog-close">&times;</span>
            <h3>Bill History</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Month Reading</th>
                        <th>Amount</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% history.forEach(entry => { %>
                    <tr>
                        <td><%= entry.bill_date %></td>
                        <td><%= entry.month_reading %></td>
                        <td>$<%= entry.bill_amount %></td>
                        <td>
                            <a href="/history/details/<%= entry.tenent_id %>/<%= entry.id %>" class="btn ghost">See Details</a>
                            <button class="btn ghost">Edit</button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

</body>


</html>